{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!
{% endblock %}

{% block body %}
	{% if app.user %}
		<div class="mb-3">
			You are logged in as
			{{ app.user.userIdentifier }},
			<a href="{{ path('app_logout') }}">Logout</a>
		</div>
		<div>
			{{ include('livro/index.html.twig', {livros: []}) }}
		</div>
	{% else %}
		<div class="mb-3">
			<a href="{{ path('app_register')}}">Registre-se</a>
			<a href="{{ path('app_login')}}">Login</a>
		</div>

	{% endif %}
{% endblock %}
